<style>
    .cont{
        display: grid;
        place-items:center;
    }
    .cont_table{
        width: 50%;
        display: flex;
        flex-direction: column;
        background: #fff;
        box-shadow: 2px 1px 30px 2px #00000027;
        border-radius: 5px;
        gap: 2rem;
        padding: 2rem 0rem;
        
    }
    .cont_table--header{
        width: 100%;
        display: flex;
        justify-content: space-around;
    }
    .cont_table--body{
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .cont_table--row{
        width: 100%;
        display: flex;
        justify-content: space-around;
        text-align: center;
    }
    .cont_table_row--item{
        width: 100%;
        text-align: center;
    }
    .cont_table_header--title{
        font-size: 25px;
        font-family: sans-serif;

    }
    .titulo_tabla{
        font-family: sans-serif;
        font-size: 2rem;
        color: #267228;
    }
</style>

<div class="cont">
    <h2 class="titulo_tabla">Lista de productos</h2>
    
    <div class="cont_table">
        <div class="cont_table--header">
            <span class="cont_table_header--title">Nombre</span>
            <span class="cont_table_header--title" style="text-align: left;">Email</span>
            <span class="cont_table_header--title">Peso</span>
        </div>
        <div class="cont_table--body">
            <% productos.forEach( item => { %>
                <div class="cont_table--row">
                    <span class="cont_table_row--item"><%=item.nombre %></span>
                    <span class="cont_table_row--item" style="text-align: left;"><%=item.email %></span>
                    <span class="cont_table_row--item"><%=item.peso %></span>
                    <a href="/<%=item.id%>">Ver</a>
                </div>
            <% }) ;%>
        </div>

    </div>




</div>